<div class="container four columns">
<h3>Confirm Receipt</h3>

<h3>Party: <%= @party.id %></h3>

<h5> Table: <%= @party.table_num %></h5>

<ul>
<% @item_orders.each do |item_order| %>

<li><%= item_order.food_item.name %></li>

<% end %>
</ul>

<strong>Subtotal: $<%= @party.bill_subt %></strong>
<p>
  Suggested Tip: <br>
  15% = $<%= @party.bill_subt * 0.15 %><br>
  18% = $<%= @party.bill_subt * 0.18 %><br>
  20% = $<%= @party.bill_subt * 0.20 %><br>
</p>


<form action="/parties/<%= @party.id %>/edit" method="post">
  <input type="hidden" name="_method" value="put">
  <input type="hidden" name="party[is_paid?]" value="TRUE">
  <button type="submit">PAID</button>
</form>

<a href="/item_orders/new?pid=<%= @party.id %>" class="button">Add Order</a>

<a href="/../editall" class="button">Back to Receipts</a>
<a href="/parties" class="button">Back to Tables</a>

</div>
